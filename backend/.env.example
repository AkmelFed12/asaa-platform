# Admin Panel
ADMIN_PASSWORD=admin123

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBSOCKET=true
ENABLE_PHOTO_UPLOADS=true

# Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif

